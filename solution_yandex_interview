#include <iostream>
using namespace std;

int main()
{
    int n;//количество баков
    cin>>n;
    long *p=new long[n];//выделяем динамически память под массив чисел

    for(int i=0;i<n;i++)//в цикле считываем размер каждого бака
    {
      cin>>p[i];
    }

     long min_=p[0];//берем за минимум объем 1го бака
     for(int i=1;i<n;i++)
        {if(p[i]<min_) {cout<<"-1"; return 0;}//если в следующем баке объем больше, решения нет.
          min_=p[i];}// дальше сравниваем уже со следующим баком, т.к. его объем больше.

   cout<<p[n-1]-p[0];//выводим разницу между максимальным и минимальным объемом
   return 0;
}
